<!DOCTYPE html>
<html>
<head>
  <title>Shaipz</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="top-bar">
    <div class="wrap">
      <% if user_signed_in? %>
        <%= link_to(t("menu.profile"), edit_user_path(current_user)) %>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
      <% else %>
        <div id="sign-in">
          <%= form_for("user", :url => user_session_path) do |f| %>
            <%= f.email_field :email %>
            <%= f.password_field :password %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <%= f.submit 'Sign in' %>
            <%= link_to "Forgot your password?", new_password_path('user') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>


  <header>
    <div class="wrap">
      <h1 class="logo">Shaipz</h1>
      <p class="tagline">Collaborative home buying</p>

      <section id="flash">
        <% if notice %>
          <div class="message notice"><%= notice %></div>
        <% end %>

        <% if alert %>
          <div class="message alert"><%= alert %></div>
        <% end %>
      </section>
    </div>
  </header>

  <section id="content">
    <%= yield %>
  </section>

  <footer>
    <div class="wrap">
      <h1 class="logo">Shaipz</h1>
      <p class="tagline">Collaborative home buying</p>
    </div>
  </footer>
</body>
</html>
