</div>

<!-- quotations -->
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-interval="10" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-interval="10" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-interval="10" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
      <blockquote>
        <img src="assets/beatricedelvaux.jpg" class="img-rounded image-eloge">
        <i class="icon-quote-left icon-4x pull-left icon-muted"></i>
        <p class="eloge"><%= t("home.quote_beatricedelvaux") %></p>
        <small>Béatrice Delvaux, <cite title="Source Title"><%= t("home.position_beatricedelvaux") %></cite></small>
      </blockquote>
    </div>
    <div class="item">
      <blockquote>
        <img src="assets/andreduval.png" class="img-rounded image-eloge">
        <i class="icon-quote-left icon-4x pull-left icon-muted"></i>
        <p class="eloge"><%= t("home.quote_andreduval") %></p>
        <small>André Duval, <cite title="Source Title"><%= t("home.position_andreduval") %></cite></small>
      </blockquote>
    </div>
    <div class="item">
      <blockquote>
        <img src="assets/melaniemaquinay.jpg" class="img-rounded image-eloge">
        <i class="icon-quote-left icon-4x pull-left icon-muted"></i>
        <p class="eloge"><%= t("home.quote_melaniemaquinay") %></p>
        <small>Mélanie Maquinay, <cite title="Source Title"><%= t("home.position_melaniemaquinay") %></cite></small>
      </blockquote>
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a> 
</div>

