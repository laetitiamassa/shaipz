
<!-- Header with background -->
<div class="row-fluid">
  <div class="span12">      
    <div id="join">
      
      <div class="row-fluid">
        <div class="span8 offset2">
          <div id="tagline" class="text-center"><p><%= t("home.baseline") %></p>
            <a href="#Signup" data-toggle="modal"><button class="span4 offset4 btn btn-large btn-block btn-info" type="button" id="call-join"><p class="lead"><%= t("home.join_now") %></p></button></a>
            <!-- Button to trigger modal -->
            <a href="#DemoVideo" role="button" data-toggle="modal" id="watch"><p class="span6 offset3"><%= t("home.or_watch_video") %></p></a>
            <!-- Modal -->
            <div id="DemoVideo" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div id="youtube">
                <iframe width="600" height="300" src="http://www.youtube.com/embed/f4zwYhjYuiQ" showinfo="0" autohide="1" frameborder="0" allowfullscreen color2="#1b8e8a"></iframe>
              </div>
            </div> 
          </div>
        </div>
      </div>   
    </div>
  </div>
</div>

