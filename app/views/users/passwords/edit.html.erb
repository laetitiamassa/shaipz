<!-- Header with background -->
<div class="row-fluid">
  <div class="span12">      
    <div id="signin">

      <div class="row-fluid">
        <div class="span8 offset2">
          <div id="tagline" class="text-center"><p><%= t("home.baseline") %></p></div> 
        </div>
      </div>
       
      <div class="row-fluid">
        <div class="hero-unit passwordbloc span4 offset4">

    <center>
          <h2>Change your password</h2>
        </center>



  

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <ul class="fields">
      <li class="string text-center">
        <%= f.label :password, "New password" %>
        <%= f.password_field :password %>
      </li>

      <li class="string text-center">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation %>
      </li>
    </ul>

    <div class="form-actions">
      <%= f.submit "Change my password", :class => "btn btn-large btn-block btn-info" %>
    </div>
  <% end %>

  <div class="devise-links"><%= render "devise/shared/links" %></div>



        
        </div> <!-- end hero-unit -->
      </div> <!-- end row-fluid -->
      </div> <!-- end signin -->
  </div> <!-- end span12 -->
</div> <!-- end whole form, tagline and background -->






