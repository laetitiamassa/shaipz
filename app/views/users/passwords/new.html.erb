<section class="auth-form" class="clear">
  <h2><%= t("sign_in.forgot_your_password") %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <ul class="fields">
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
    </ul>

    <div class="form-actions">
      <span class="button"><%= f.submit "Send me reset password instructions" %></span>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
