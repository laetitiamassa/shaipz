<!-- Header with background -->
<div class="row-fluid">
  <div class="span12">      
    <div id="signin">

      <div class="row-fluid">
        <div class="span8 offset2">
          <div id="tagline" class="text-center"><p><%= t("home.baseline") %></p></div> 
        </div>
      </div>
       
      <div class="row-fluid">
        <div class="hero-unit passwordbloc span4 offset4">

    <center>
          <h2><%= t("sign_in.activate_account") %></h2>
        </center>



  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <ul class="fields">
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
    </ul>
    
        <div class="form-actions">
          <%= f.submit t("sign_in.resend_confirmation"), :class => "btn btn-large btn-block btn-info" %>
        </div>

        <% end %>

        <div class="devise-links"><%= render "devise/shared/links" %></div>
        
        </div> <!-- end hero-unit -->
      </div> <!-- end row-fluid -->

    </div> <!-- end signin -->
  </div> <!-- end span12 -->
</div> <!-- end whole form, tagline and background -->





