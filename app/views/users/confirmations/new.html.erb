<!-- Header with background -->
<div class="row-fluid">
  <div class="span12">      
    <div id="signin">

      <div class="row-fluid">
        <div class="span8 offset2">
          <div id="tagline" class="text-center"><p>A smart way to buy your home</p></div> 
        </div>
      </div>
       
      <div class="row-fluid">
        <div class="hero-unit passwordbloc span4 offset4">

    <center>
          <h2><%= t("sign_in.forgot_your_password") %></h2>
        </center>



  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <ul class="fields">
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
    </ul>
    
        <div class="form-actions">
          <%= f.submit "Resend confirmation instructions", :class => "btn btn-large btn-block btn-info" %>
        </div>

        <% end %>

        <div class="devise-links"><%= render "devise/shared/links" %></div>
        
        </div> <!-- end hero-unit -->
      </div> <!-- end row-fluid -->

    </div> <!-- end signin -->
  </div> <!-- end span12 -->
</div> <!-- end whole form, tagline and background -->





<section class="auth-form" class="clear">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <ul class="fields">
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
    </ul>

    <div class="form-actions">
      <span class="button"><%= f.submit "Resend confirmation instructions" %></span>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
