<section id="sign-in-wrap">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <ul class="fields">
      <li class="string">
        <%= f.label :email %>
        <%= f.email_field :email, :placeholder => t("example_email") %>
      </li>

      <li class="string">
        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => t("example_password") %>
      </li>

      <% if devise_mapping.rememberable? -%>
        <li class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </li>
      <% end -%>

      <div class="form-actions">
        <span class="button"><%= f.submit "Sign in" %></span>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
