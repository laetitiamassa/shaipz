<section id="stream">
  <%= render :partial => "_shared/profile", :locals => {:user => @user} %>

  <div id="stream-wrap">
    <section id="start-project">
      <div class="action-call">
        <span class="button"><span class="icon"></span><%= link_to t("stream.start_project"), new_project_path %></span>
      </div>
    </section>

    <section id="projects">
      <h2><span><%= t("stream.all_projects") %><span></h2>
      <ol>
        <% @projects.each do |project| %>
          <li>
            <div class="picture"><%= link_to image_tag(project.picture.url(:thumb)), project_url(project) %></div>
            <h3><%= project.name %></h3>
            <div class="criteria">
              <span class="amount"><%= project.total_amount %> â‚¬</span>
              <span class="space"><%= project.total_space %> m&sup2;</span>
              <span class="shaipz"><%= project.maximum_shaipz %></span>
            </div>
            <div class="links">
              <span class="external"><%= link_to(image_tag("arrow.png"), project.source_link) if project.has_source_link? %></span>
              <span class="internal"><%= link_to(image_tag("screen.png"), project_url(project)) %></span>
            </div>
            <div class="details">
              <span class="address"><%= project.address %></span>
              <span class="event"><%= project.event %></span>
            </div>
            <div class="join-action">
              <a href="#"><%= t("project.join") %></a>
            </div>
          </li>
        <% end %>
      </ol>
    </section>
  </div>
</section>
