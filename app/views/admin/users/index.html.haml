.page-header
  %h1 Users

.btn-group
  = link_to "Export to CSV", admin_users_path(:format => :csv), :class => 'btn btn-info'

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Name
      %th Email
      %th Joined via
      %th Joined shaipz on
      %th Confirmation delay
      %th Sign in count
      %th Current sign in
      %th Last sign in
      %th Remembered at
      %th Password reset
      %th Current sign in IP
      %th Last sign in IP
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td
          %span.label.label-info= user.registration_method
        %td= l(user.created_at, :format => :long)
        %td= user.confirmed? ? distance_of_time_in_words(user.created_at, user.confirmed_at) : :never
        %td
          %span.badge= user.sign_in_count
        %td= l(user.current_sign_in_at, :format => :long) if user.signed_in?
        %td= l(user.last_sign_in_at, :format => :long) if user.signed_in_before?
        %td= user.remembered? ? l(user.remember_created_at, :format => :long) : :never
        %td= user.has_reset_password? ? :yes : :no
        %td= user.current_sign_in_ip
        %td= user.last_sign_in_ip
        %td
          = link_to edit_admin_user_path(user), :class => 'btn btn-small' do
            %i.icon-pencil
            Edit


