.page-header
  %h1 Users

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Name
      %th Email
      %th Join shaipz on
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td= l(user.created_at, :format => :long)
        %td
          = link_to edit_admin_user_path(user), :class => 'btn btn-small' do
            %i.icon-pencil
            Edit
