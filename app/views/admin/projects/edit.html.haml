.page-header
  %h1
    Edit
    %small= @project.name

= form_for [:admin, @project], :html => { :multipart => true, :class => 'form-horizontal' } do |f|
  = render :partial => 'form', :locals => { :f => f }

  .form-actions
    = f.submit "Update", :class => 'btn btn-primary'
    = link_to "Cancel", admin_projects_path, :class => 'btn'
